@model IEnumerable<ConsultamedicaConfort.Models.Consulta>

@{
    ViewData["Title"] = "Consultas";
}

<h1 class="text-primary">Consultas</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Agendar Consulta</a>
</p>

<table class="table table-striped">
    <thead class="table-primary">
        <tr>
            <th>Data da consulta</th>
            <th>Médico</th>
            <th>Paciente</th>
            <th>Observações</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DataConsulta.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.Medico?.Nome</td>
                <td>@item.Paciente?.Nome</td>
                <td>@item.Observacoes</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
